{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI on src",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/source_code_step_5/chatbot_api/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source_code_step_5/chatbot_api/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}